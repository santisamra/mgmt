.row
  %span.user-image 
    = image_tag(user.organization_avatar, :width => 30)
  %span.user-name
    %strong 
      = user.name
  %span.user-delete
    = form_tag(delete_user_project_path(project.name)) do
      = hidden_field_tag 'user', user.login
      = submit_tag 'X', :class => 'btn btn-mini'
